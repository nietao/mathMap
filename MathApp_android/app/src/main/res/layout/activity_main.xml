<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nietao.com.mathapp.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imgView"
        android:src="@drawable/show"
        />

    <TextView
        android:id="@+id/ATV"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:text="输入ab:"
        android:textSize="20sp"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/imgView"
        />
    <EditText
        android:id="@+id/A_Text"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="输入ab"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toTopOf="@+id/ATV"
        />

    <TextView
        android:id="@+id/BTV"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:text="输入bc:"
        android:textSize="20sp"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/A_Text"
        />
    <EditText
        android:id="@+id/B_Text"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="输入bc"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@+id/A_Text"
        />

    <TextView
        android:id="@+id/CTV"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:text="输入ca:"
        android:textSize="20sp"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/B_Text"
        />
    <EditText
        android:id="@+id/C_Text"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:inputType="numberDecimal"
        android:hint="输入ca"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@+id/B_Text"
        />
    <Button
        android:id="@+id/Btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="开始计算"
        app:layout_constraintTop_toBottomOf="@+id/C_Text"
        />
    <TextView
        android:id="@+id/res_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结果如下："
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/Btn"
        />
</android.support.constraint.ConstraintLayout>
